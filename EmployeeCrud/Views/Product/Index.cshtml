@model IEnumerable<EmployeeCrudOperation.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <a class="btn btn-sm btn-primary" asp-action="Create" asp-controller="Product">Create</a>
            <hr />
            <table class="table table-bordered">
                <tr class="text-center">
                    <td>Id</td>
                    <td>Product Name</td>
                    <td>Product Image</td>
                    <td>Action</td>
                </tr>
                @foreach(var p in Model)
            {
            <tr class="text-center">
                <td>@p.Id</td>
                <td>@p.ProductName</td>
                <td><img src="../../@p.ProductImage" style="height:100px; width=100px;" /></td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-controller="Product" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-controller="Product" asp-route-id="@p.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
            }
            </table>
        </div>
    </div>
</div>

