@model EmployeeCrudOperation.Models.ViewModel.EmployeeCreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Update Employee Record</h1>
                </div>
                <div class="card-body">
                    <p class="text-center text-danger">@TempData["error"]</p>
                    <form method="post" asp-action="Update">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input type="hidden" asp-for="Id" />
                            <input type="text" class="form-control" asp-for="@Model.FirstName" placeholder="FirstName" autocomplete="off" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"> </span>

                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input type="text" class="form-control" asp-for="@Model.LastName" placeholder="LastName" autocomplete="off" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"> </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender"></label>
                            <select class="form-control" asp-for="Gender">
                                <option value="0">--Select Gender--</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Department"></label>
                            <select class="form-control" asp-for="Department">
                                <option value="0">--Select--</option>
                                @foreach (var d in ViewBag.depts)
                                {
                                    <option value="@d.Id">@d.Depart</option>
                                }
                            </select>
                        </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="text" class="form-control" asp-for="@Model.Email" placeholder="Enter Email" autocomplete="off" />
                                <span asp-validation-for="@Model.Email" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Mobile"></label>
                                <input type="text" class="form-control" asp-for="@Model.Mobile" placeholder="Enter Mobile" autocomplete="off" />
                                <span asp-validation-for="@Model.Mobile" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <textarea class="form-control" placeholder="Enter Full Address" asp-for="@Model.Address" rows="4" cols="4" autocomplete="off"></textarea>
                                <span asp-validation-for="@Model.Address" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary"></label>
                                <input type="text" class="form-control" asp-for="@Model.Salary" autocomplete="off" />
                                <span asp-validation-for="@Model.Salary" class="text-danger"> </span>

                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success form-control" value="SUBMIT" />
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

