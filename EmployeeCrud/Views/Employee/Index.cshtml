@model IEnumerable<EmployeeCrudOperation.Models.ViewModel.EmployeeDepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-10 offset-1 ">
            <h1 class="header-text text-center text-success">Employee Record</h1>
            <h5 class="text-center text-danger">@TempData["error"] </h5>
            <hr />
            <a class="btn btn-success mb-2" asp-action="Create" asp-controller="Employee">Create</a>

            <table id="Unless" class="table">
                <tr class="success text-center">
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Gender</th>
                    <th>Department</th>
                    <th>Mobile</th>
                    <th>Action</th>
                </tr>
                @foreach (var emp in Model)
                {
                    <tr class="text-center">
                        <td>@emp.Id</td>
                        <td>@emp.FirstName @emp.LastName</td>
                        <td>@emp.Gender</td>
                        <td>@emp.Department</td>
                        <td>@emp.Mobile</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Update" asp-controller="Employee" asp-route-id="@emp.Id">Update</a>
                            <a class="btn btn-sm btn-outline-success" asp-action="Details" asp-controller="Employee" asp-route-id="@emp.Id">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@emp.Id" onclick="return confirm('Are You Sure, You want to Delete this Record!')">Delete</a>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>
@section Scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#Unless').DataTable();
        });
    </script>

}

